# Web Deployment Configuration for Smart File Search
# Used when hosting on GitOps platform

# Deployment Mode
DEPLOYMENT_MODE=web
WEB_ACCESS_ENABLED=true

# API Configuration for Web Hosting
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_PORT=3000

# Database - Persistent storage for web deployment  
DB_PATH=/data/file_index.sqlite3
ENABLE_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# Security for Web Deployment
MAX_CONCURRENT_USERS=50
RATE_LIMIT_PER_MINUTE=200
MAX_FILE_SIZE_MB=100
MAX_INDEXED_FILES=100000

# Network Folder Access (Configure for your environment)
# These are examples - update with your actual network paths
# ALLOWED_NETWORK_PATHS=\\fileserver\documents,\\nas\projects

# Performance Optimization for Web
QUICK_SCAN_DEFAULT=true
CONCURRENT_WORKERS=4
WEB_REQUEST_TIMEOUT=30
INDEXING_TIMEOUT=300

# AI Features (OpenAI API key configured)
OPENAI_API_KEY=your_openai_api_key_here
GPT_MODEL=gpt-4o-mini
ENABLE_AI_FEATURES=true
ENABLE_QUERY_REWRITE=true
ENABLE_SUMMARIZATION=true

# Logging for Web Deployment
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS for Web Access
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30
