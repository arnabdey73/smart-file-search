# Example environment configuration
# Copy this file to .env and update with your settings

# OpenAI API configuration
GPT_API_KEY=your-openai-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Database configuration
DB_PATH=./data/file_index.sqlite3

# Security configuration - allowed root directories for indexing
ALLOWED_ROOTS=/mnt/shared,/mnt/shared/finance,/mnt/shared/documents

# Server ports
UI_BACKEND_PORT=8081
UI_FRONTEND_PORT=8080
MCP_PORT=9000

# Optional: Backend API authentication
REQUIRE_AUTH=false
API_KEYS=your-api-key-1,your-api-key-2

# File processing settings
MAX_FILE_SIZE=10485760
CHUNK_SIZE=1000
CHUNK_OVERLAP=100
MAX_SNIPPET_LENGTH=500

# Search configuration
DEFAULT_SEARCH_LIMIT=10
MAX_SEARCH_LIMIT=100
ENABLE_SEMANTIC_SEARCH=false

# Logging configuration
LOG_LEVEL=INFO
STRUCTURED_LOGGING=false

# Rate limiting
RATE_LIMIT=60

# CORS settings (for development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Backend service URLs (for containerized deployment)
MCP_SERVER_URL=http://mcp_server:9000
MCP_TIMEOUT=30
