# Token Usage Configuration for Smart File Search
# Adjust these values to control OpenAI token consumption

# Daily token limits (conservative defaults)
DAILY_TOKEN_LIMIT=5000
MAX_TOKENS_PER_REQUEST=100

# Feature-specific token limits
QUERY_ENHANCEMENT_MAX_TOKENS=50
SUMMARIZATION_MAX_TOKENS=150
RELATED_QUERIES_MAX_TOKENS=80

# Cost thresholds (USD)
DAILY_COST_ALERT_THRESHOLD=0.75
MONTHLY_BUDGET_LIMIT=20.00

# AI usage policies
AUTO_DISABLE_ON_LIMIT=true
REQUIRE_EXPLICIT_AI_OPT_IN=true
ENABLE_TOKEN_WARNINGS=true

# Performance settings
MIN_RESULTS_FOR_AI_SUMMARY=3
MIN_QUERY_LENGTH_FOR_AI=3
AI_TIMEOUT_SECONDS=10
